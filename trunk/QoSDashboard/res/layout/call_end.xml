
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" 
    >

    <TextView
        android:id="@+id/lbl_your_name" android:text="How did your call ended?" 
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <Button
        android:id="@+id/iEndedIt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I ended it"/>

    <Button
        android:id="@+id/wrongNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong Number" />
    <Button
        android:id="@+id/callDropped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call dropped" />
    
</LinearLayout>
